!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/initializer.css')
      link(rel='stylesheet', href='/css/github.css')
      link(rel='stylesheet', href='/css/fluid.css')
      link(rel='stylesheet', href='/css/theme.css')
      link(rel='stylesheet', href='/css/finalizer.css')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Ubuntu')
      script(src='/js/libs/modernizr-2.0.min.js')
      script(src='/js/libs/polyfills.js') 
      script(src='/js/libs/jquery-1.6.2.min.js')
      script(src='/js/script.js')
  body
    header.clearfix
      img#logo(src='/images/backgrounds/logo-32.png')      
      nav
        ul
          li
            - var blogSelected = (page.url.substring(0, 4) === '/art' || page.url === '/' ? 'selected' : '')
            a(href='/', class=blogSelected) Blog
          li.sep |
          li
            - var blogSelected = (page.url.substring(0, 4) === '/arc'  ? 'selected' : '')
            a(href='archive.html', class=blogSelected)#archive Archives
          li.sep |
          li
            - var blogSelected = (page.url.substring(0, 4) === '/abo'  ? 'selected' : '')
            a(href='about-me.html', class=blogSelected) About Me
    block content
