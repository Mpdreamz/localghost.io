!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title localghost.io
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/normalize.css')
      link(rel='stylesheet', href='/css/layout.css')
      link(rel='stylesheet', href='/css/styling.css')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Rokkitt|Roboto+Condensed|Share+Tech+Mono')
      link(rel="stylesheet", href="/css/styles/ir_black.css")
      script(src="/js/highlight.pack.js")
      //script(src='/js/script.js')
  body
    nav
      ul
        li
          - var blogSelected = (page.url.substring(0, 4) === '/art' || page.url === '/' ? 'selected' : '')
          a(href='/', class=blogSelected) Blog
        li.sep |
        li
          - var blogSelected = (page.url.substring(0, 4) === '/arc'  ? 'selected' : '')
          a(href='/archive.html', class=blogSelected)#archive Archives
        li.sep |
        li
          - var blogSelected = (page.url.substring(0, 4) === '/abo'  ? 'selected' : '')
          a(href='/about-me.html', class=blogSelected) About Me

    header.clearfix
      //img#logo(src='/images/backgrounds/logo-32.png')      
      h1 localghost.io
        span.blink _
    section.content
    block content
    script hljs.initHighlightingOnLoad(); 
       
